                        <input type="text" class="form-control" name="book_title" id="book-title" placeholder="Book Title" required>
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" name="isbn_number" id="isbn-number" placeholder="ISBN" required>
