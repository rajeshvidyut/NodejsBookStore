<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>
    <% if (book) { %>
    <div class="row">
        <div class="col-md-6 offset-3 jumbotron">
            <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-12 ">
                        <input type="text" class="form-control" name="book_title" id="book-title" placeholder="Book Title" value="<%= book.book_title %>" required>
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" name="isbn_number" id="isbn-number" placeholder="ISBN"  value="<%= book.isbn_number %>" required>
                    </div>
                    <!-- <div class="form-group col-md-12 ">
                        <textarea class="md-textarea form-control" name="description" id="description" placeholder="Description" rows="3" required><%= //book.description %></textarea>
                    </div> -->
                </div>
                
                <button type="submit" class="btn btn-success float-right">Update Book</button>
                <a href="/list"  class="btn btn-default float-right">Back</a>
            </form>
        </div>
    </div>
    <% } else { %>
        <p class="text-center">Book Not Found. Go <a href="/add">here</a> to add players.</p>
    <% } %>
</div>
<% include partials/footer.ejs %>
