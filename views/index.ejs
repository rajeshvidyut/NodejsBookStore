<% include partials/header.ejs %>
<% include partials/search.ejs %>
    <div class="col-md-12  content">
        <% books.forEach((book, index) => { %>
            <div class="row">
                <div class="container ">
                    <div class="well">
                        <div class="media">
                            <a class="pull-left" href="#">
                                <% if (book.image != null) {%>
                                    <img src="/assets/img/<%= book.image %>" width="180px"  alt="BooK image">
                                <% } else { %>
                                    <p class="text-center"><img class="media-object" width="150px" height="110px" src="/assets/img/images.png"></p>
                                <% } %>
                            </a>
                            <div class="media-body">
                                <h4 class="media-heading"><%= book.book_title %></h4>
                                <p><%= book.description %></p>
                                <p><strong>ISBN Number :</strong> <%= book.isbn_number %></p>
                                <hr>
                                <ul class="list-inline list-unstyled">
                                    <li><span><i class="glyphicon glyphicon-calendar"></i> <%= book.created_at %> </span></li>
                                    <li>|</li>
                                    <li>
                                        <span><i class="fa fa-facebook-square"></i></span>
                                        <span><i class="fa fa-twitter-square"></i></span>
                                        <span><i class="fa fa-google-plus-square"></i></span>
                                    </li>
                                    <% if(typeof user != "undefined"){  %>
                                        <li> <p><strong>Created By :</strong> <%= book.CreatedBy %> </p></li>
                                    <% } else { %>
                                        <li> <p></p></li>
                                    <% } %>    
                                    <% if(typeof user != "undefined"){  %>
                                        <% if(user.id == book.created_by){  %>
                                            <li style="float:right">
                                                <a href="/edit/<%= book.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success"> <span class="glyphicon glyphicon-edit"></span></a>
                                                <a href="/delete/<%= book.id %>" class="btn btn-sm btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
                                            </li>
                                        <% } else { %>
                                            <li style="float:right">
                                                <i>You are not owned this post</i>
                                            </li>
                                        <% } %>  
                                    <% } else { %>
                                        <li style="float:right">
                                        </li>
                                    <% } %>                      
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
<% include partials/footer.ejs %>
